<h3>Drivers</h3>
@using TrafficManagementSystem.Application.DTOs.Driver
@using TrafficManagementSystem.Application.Services
@using TrafficManagementSystem.Portal.Data

@inject DriverService DriverService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (drivers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in drivers)
            {
                <tr>
                    <td>@driver.FirstName ToShortDateString()</td>
                    <td>@driver.LastName</td>
                    <td>@driver.Email</td>
                    <td>@driver.Address</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<DriverDto> drivers;

    protected override async Task OnInitializedAsync()
    {
        var response  = await DriverService.GetAllDrivers();

        drivers = response.Data.ToList();
    }
}
